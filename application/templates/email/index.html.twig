{% extends 'base.html.twig' %}

{% block title %}Hello EmailController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: darkslategray; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for flash in app.flashes('success') %}
        <div style="background-color: darkgreen; font-weight: bold; border-radius: 12px; padding: 10px 12px">
            {{ flash }}
        </div>
    {% endfor %}

    <h1>Hello {{ controller_name }}!</h1>

    <a href="{{ path('send_email') }}" style="display: block; text-align: center; text-decoration: none; margin-top: 40px; color: ghostwhite; background-color: darkgoldenrod; border-radius: 12px; padding: 10px 12px">Send an email!</a>
    <a href="{{ path('email_statuses') }}" style="display: block; text-align: center; text-decoration: none; margin-top: 40px; color: ghostwhite; background-color: royalblue; border-radius: 12px; padding: 10px 12px">View email statuses</a>
</div>
{% endblock %}
