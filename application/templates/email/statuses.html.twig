{% extends 'base.html.twig' %}

{% block title %}Email statuses{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1200px; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: darkslategray; padding: 2px 6px; }
    table, th, td {
        border: 1px solid;
        padding: 4px 12px;
    }
    table {
        border-collapse: collapse;
        width: 100%;
    }
</style>

<div class="example-wrapper">
    <table>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>Recipient</th>
            <th>Status</th>
        </tr>
        {% for email in emails %}
            <tr>
                <td>{{ email.id }}</td>
                <td>{{ email.date }}</td>
                <td>{{ email.to }}</td>
                <td>{{ email.status }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
